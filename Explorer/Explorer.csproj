<Project Sdk="Microsoft.NET.Sdk.Web">

  <Import Project="..\msbuild\Source.props" />

  <PropertyGroup>
    <RootNamespace>Explorer</RootNamespace>
    <JsLibRoot>JsLib</JsLibRoot>
    <DefaultItemExcludes>$(DefaultItemExcludes);$(JsLibRoot)\node_modules\**</DefaultItemExcludes>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\AstTransformations\AstTransformations.fsproj" />
    <ProjectReference Include="..\Compiler\Compiler.csproj" />
  </ItemGroup>

  <ItemGroup Label="Package references">
    <PackageReference Include="Microsoft.AspNetCore" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="3.1.5" />
    <PackageReference Include="Microsoft.AspNetCore.Hosting" Version="2.2.7" />
    <PackageReference Include="Microsoft.AspNetCore.HttpsPolicy" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.2.0" />
    <PackageReference Include="Microsoft.Quantum.Development.Kit" Version="0.12.20100504" />
  </ItemGroup>

  <PropertyGroup>
    <StartAction>Project</StartAction>
    <ExternalConsole>true</ExternalConsole>
    <ApplicationURL>https://localhost:8081;http://localhost:8080</ApplicationURL>
  </PropertyGroup>

  <!--  Below are settings for NPM and webpack -->

  <ItemGroup>
    <Content Remove="$(JsLibRoot)\**" />
    <None Remove="$(JsLibRoot)\**" />
    <None Include="$(JsLibRoot)\**" Exclude="$(JsLibRoot)\node_modules\**" />
    <Content Include="syntax\onigasm.wasm" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <Target Name="EnsureNodeEnv" BeforeTargets="BuildJsBundle" Condition=" !Exists('$(JsLibRoot)\node_modules') ">
    <!-- Ensure Node.js is installed -->
    <Exec Command="node --version" ContinueOnError="true">
      <Output TaskParameter="ExitCode" PropertyName="ErrorCode" />
    </Exec>
    <Error Condition="'$(ErrorCode)' != '0'" Text="Node.js is required to build and run this project. To continue, please install Node.js from https://nodejs.org/, and then restart your command prompt or IDE." />
    <Message Importance="high" Text="Restoring dependencies using 'npm'. This may take several minutes..." />
    <Exec WorkingDirectory="$(JsLibRoot)\" Command="npm install" />
  </Target>

  <Target Name="BuildJsBundle" BeforeTargets="PreBuildEvent">
    <Exec WorkingDirectory="$(JsLibRoot)\" Command="npm run build" />
  </Target>

  <Target Name="PublishRunWebpack" AfterTargets="ComputeFilesToPublish">
    <!-- As part of publishing, ensure the JS resources are freshly built in production mode -->
    <Exec WorkingDirectory="$(JsLibRoot)\" Command="npm install" />
    <Exec WorkingDirectory="$(JsLibRoot)\" Command="npm run build" />
  </Target>

</Project>
