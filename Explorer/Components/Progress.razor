@if (Running)
{
    <div class="slider">
        <div class="line"></div>
        <div class="subline inc"></div>
        <div class="subline dec"></div>
    </div>
}

@code {

    private bool running;

    public bool Running
    {
        get => running;
        set
        {
            running = value;
            InvokeAsync(StateHasChanged);
        }
    }

}
