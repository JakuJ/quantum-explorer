<svg height="40" width="40">
    <circle cx="20" cy="20" r="@R" stroke="@Stroke" stroke-width="2" fill="@Fill"/>
</svg>

@code {

    [Parameter]
    public int R { get; set; } = 20;

    [Parameter]
    public string Stroke { get; set; } = "var(--text)";

    [Parameter]
    public string Fill { get; set; } = "var(--background)";

}
