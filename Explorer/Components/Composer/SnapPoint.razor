@using Common

<div id="@Id" class="grid-snap @HalfClass" style="left: @XOffset"></div>

@code {

    [Parameter]
    public bool Half { get; set; } = false;

    [Parameter]
    public int X { get; set; }

    [Parameter]
    public int Y { get; set; }

    public string Id { get; } = UniqueId.CreateUniqueId();

    private int XCoord => Half ? X * 40 + 20 : X * 40;

    private string XOffset => $"{XCoord}px";

    private string HalfClass => Half ? "half" : "";
}
