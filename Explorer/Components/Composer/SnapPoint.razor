@using Common
@using Microsoft.Extensions.Logging
@inject ILogger<SnapPoint> Logger

<div id="@Id" class="grid-snap @(Half ? "half" : "") @(Locked ? "locked" : "")" style="left: @XOffset"></div>

@code {

    [Parameter]
    public int X { get; set; }

    [Parameter]
    public int Y { get; set; }

    [Parameter]
    public bool Half { get; set; }

    [Parameter]
    public bool Locked { get; set; }

    protected override void OnInitialized()
    {
        if (!Half)
        {
            Logger.LogInformation($"Initialized snap {Id} at {X}, {Y}");
        }
    }

    public string Id { get; } = UniqueId.CreateUniqueId();

    private int XCoord => Half ? X * 40 + 20 : X * 40;

    private string XOffset => $"{XCoord}px";

    public override string ToString() => $"[{X},{Y}] {Id} {Half}";

}
