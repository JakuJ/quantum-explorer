@using Common
@using Microsoft.Extensions.Logging

<div id="@Id" class="grid-snap @HalfClass" style="left: @XOffset"></div>

@code {

    [Parameter]
    public int X { get; set; }

    [Parameter]
    public int Y { get; set; }

    [Parameter]
    public bool Half { get; set; }

    [Parameter] // HACK
    public ILogger Logger { get; set; }

    protected override void OnInitialized()
    {
        Logger.LogInformation($"Initialized snap {Id} at {X}, {Y} {HalfClass}");
    }

    public string Id { get; } = UniqueId.CreateUniqueId();

    private int XCoord => Half ? X * 40 + 20 : X * 40;

    private string XOffset => $"{XCoord}px";

    private string HalfClass => Half ? "half" : "";

    public override string ToString() => $"[{X},{Y}]{HalfClass} {Id}";

}
